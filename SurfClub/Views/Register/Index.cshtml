@model SurfClub.Models.DBModels.User
@{
    ViewBag.Title = "Клуб любителей серфинга - регистрация";
}

<div class="panel panel-info wide-panel form-style">
    <div class="panel-heading">
        Регистрация нового пользователя
    </div>

    <div class="panel-body">
        @using (@Html.BeginForm("Register", "Register", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
        <form>
            <div class="form-group" style="color: #aeaeae; font-family: Calibri">
                @Html.LabelFor(model => model.Nickname)
                @Html.EditorFor(model => model.Nickname, new { htmlAttributes = new { @class = "form-control", title = " * От 3 до 20 символов. Латиница, кириллица, цифры и подчеркивания" } })
                @Html.ValidationMessageFor(model => model.Nickname)
            </div>

            <div class="form-group" style="color: #aeaeae; font-family: Calibri">
                @Html.LabelFor(model => model.Email)
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", title = " *Пример: ex@example.ex" } })
                @Html.ValidationMessageFor(model => model.Email)
            </div>

            <div class="form-group" style="color: #aeaeae; font-family: Calibri">
                @Html.LabelFor(model => model.Password)
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", title = "* От 6 до 20 символов. Латиница цифры и подчеркивания", type = "Password" } })
                @Html.ValidationMessageFor(model => model.Password)
            </div>

            <div class="form-group" style="color: #aeaeae; font-family: Calibri">
                @Html.LabelFor(model => model.PasswordConfirm)
                @Html.EditorFor(model => model.PasswordConfirm, new { htmlAttributes = new { @class = "form-control", title = "* От 6 до 20 символов. Латиница цифры и подчеркивания", type = "Password" } })
                @Html.ValidationMessageFor(model => model.PasswordConfirm)
            </div>

            <div class="form-group" style="color: #aeaeae; font-family: Calibri">
                @Html.LabelFor(model => model.Lastname)
                @Html.EditorFor(model => model.Lastname, new { htmlAttributes = new { @class = "form-control", title = "" } })
                @Html.ValidationMessageFor(model => model.Lastname)
            </div>

            <div class="form-group" style="color: #aeaeae; font-family: Calibri">
                @Html.LabelFor(model => model.Name)
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", title = "" } })
                @Html.ValidationMessageFor(model => model.Name)
            </div>

            <div class="form-group" style="color: #aeaeae; font-family: Calibri">
                @Html.LabelFor(model => model.Photo)
                <input name="imageData" type="file" accept="image/jpeg" />

            </div>

            <div class="form-group" style="color: #aeaeae; font-family: Calibri">
                @Html.LabelFor(model => model.ContactInfo)
                @Html.TextAreaFor(model => model.ContactInfo, 10, 150, new { htmlAttributes = new { @class = "form-control add-post-area" } })
            </div>

            <div class="form-group" style="color: #aeaeae; font-family: Calibri">
                @Html.LabelFor(model => model.About)
                @Html.TextAreaFor(model => model.About, 10, 150, new { htmlAttributes = new { @class = "form-control add-post-area" } })
            </div>

            <div class="form-group" style="color: #aeaeae; font-family: Calibri">
                @Html.LabelFor(model => model.Achivements)
                @Html.TextAreaFor(model => model.Achivements, 10, 150, new { htmlAttributes = new { @class = "form-control add-post-area" } })
            </div>

            <div>
                @Html.ValidationSummary(true, "", new { @class = "redtext" })
            </div>

            <div class="form-group" style="color: #aeaeae; font-family: Calibri">
                * - поля, обязательные для заполнения
                <button type="submit" class="btn button-style">Зарегистрироваться</button>
            </div>
        </form>
            <br>

        }
    </div>

</div>
<div class ="form-group" style="text-align:center; color: #aeaeae; font-family: Calibri">
    Уже есть аккаунт?
    <a href="@Url.Action("Index","Home")" button type="submit" class="btn button-style">Войти</a>
</div>



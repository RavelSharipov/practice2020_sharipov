
@model SurfClub.Models.DBModels.User
@{
    ViewBag.Title = "Клуб любителей серфинга - регистрация";
}
<br>
<div class="panel panel-info">

    <div class="panel-heading">
        Регистрация нового пользователя
    </div>


    <div class="panel-body">

        @using (Html.BeginForm("Register", "Register", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div>
                <form>
                    <div class="Row">
                        <div class="Column">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Nickname)
                                @Html.EditorFor(model => model.Nickname, new { HtmlAttributes = new { @class = "form-control", title = "От 3 до 20 символов. Латиница, кирилица, цифры и подчеркивания" } })
                                @Html.ValidationMessageFor(model => model.Nickname)
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Email)
                                @Html.EditorFor(model => model.Email, new { HtmlAttributes = new { @class = "form-control", placeholder = "example@ex.ru" } })
                                @Html.ValidationMessageFor(model => model.Email)
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Password)
                                @Html.EditorFor(model => model.Password, new { HtmlAttributes = new { @class = "form-control", title = "От 6 до 20 символов. Латиница, цифры и подчеркивания", type = "Password" } })
                                @Html.ValidationMessageFor(model => model.Password)
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.PasswordConfirm)
                                @Html.EditorFor(model => model.PasswordConfirm, new { HtmlAttributes = new { @class = "form-control", title = "От 6 до 20 символов. Латиница, цифры и подчеркивания", type = "Password" } })
                                @Html.ValidationMessageFor(model => model.PasswordConfirm)
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Lastname)
                                @Html.EditorFor(model => model.Lastname, new { HtmlAttributes = new { @class = "form-control", title = "" } })
                                @Html.ValidationMessageFor(model => model.Lastname)
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Name)
                                @Html.EditorFor(model => model.Name, new { HtmlAttributes = new { @class = "form-control", title = "" } })
                                @Html.ValidationMessageFor(model => model.Name)
                            </div>
                        </div>

                        <div class="Column" style="text-align:center">
                            <br>
                            <img src="~/Content/Images/standart.jpg" height="400" />
                        </div>
                    </div>


                    <div class="form-group">
                        @Html.LabelFor(model => model.Photo)
                        <input name="imageData" type="file" accept="image/jpeg" />
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ContactInfo)
                        @Html.TextAreaFor(model => model.ContactInfo, 10, 200, new { htmlAttributes = new { @class = "form-control"} })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.About)
                        @Html.TextAreaFor(model => model.About, 10, 200, new { htmlAttributes = new { @class = "form-control"} })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Achivements)
                        @Html.TextAreaFor(model => model.Achivements, 10, 200, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    <div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>



                    <div class="form-group" style="text-align:center">
                        * - поля, обязательные для заполнения
                        <button type="submit" class="btn button-style" style="margin-left: auto">Зарегистрироваться</button>

                    </div>
                </form>
            </div>
        }
    </div>

</div>
<div style="text-align:center">
    Уже есть аккаунт?
    <a href="~/Home" type="button" class="btn button-style" style="margin-left: auto">Войти</a>
</div>